{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h1>Test application</h1>
        </div>

        <div class="panel with-nav-tabs panel-primary">
            <div class="panel-heading">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#varnish" data-toggle="tab">VarnishLog</a></li>
                    <li><a href="#tab2default" data-toggle="tab">Rss feed</a></li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="varnish">
                        <h2>Varnish log</h2>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <h3>Top hosts</h3>
                                        <div id="varnishTopHosts">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <h3>Top files</h3>
                                        <div id="varnishTopFiles">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab2default">
                        <h2>Rss feed</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $.get('{{ url('varnish') }}', function(data){
               if(data)
               {
                   var $ol = $('<ol>');
                   $.each(data.topHosts, function(key, item){
                       var $li = $('<li>');
                       $li.text(key + ' with ' + item + ' hits');
                       $ol.append($li);
                   });
                   $('#varnishTopHosts').html($ol);

                   var $ol = $('<ol>');
                   $.each(data.topFiles, function(key, item){
                       var $li = $('<li>');
                       $li.text(key + ' with ' + item + ' hits');
                       $ol.append($li);
                   });
                   $('#varnishTopFiles').html($ol);
               }
            });
        });
    </script>
{% endblock %}

